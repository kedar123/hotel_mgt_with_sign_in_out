  <form action="<%=payments_checkout_path%>" method="post">
<div class="signup_bg">

<div class=" signupheadingbg">

<div class="signuptext">Payment<span class="signuptextcolor"> Preview</span> </div>
</div>

            <%= token_tag(nil) %>  
<table width="431" border="0" align="center">
  <tr>
    <td width="138" height="49"><span class="listening_eventstext">Contact Name :</span></td>
    <td width="283"><span class="listening_eventstext"><%=@respartner.name%></span></td>
  </tr>
  <tr>
    <td height="42"><span class="listening_eventstext">Check in Date :</span></td>
    <td class="listening_eventstext"><%=@newres.checkin%></td>
  </tr>
  <tr>
    <td height="41"><span class="listening_eventstext">Check Out Date :</span></td>
    <td class="listening_eventstext"><%=@newres.checkout%></td>
  </tr>
  <tr>
    <td height="47" class="listening_eventstext">Room Name </td>
    <td class="listening_eventstext"><%=@roombarname.join(",")%></td>
  </tr>
   <tr>
    <td height="45" class="listening_eventstext">Amount </td>
    <td> 
    <%=text_field_tag :amount,session[:amount],:readonly=>true%>
    </td>
  </tr>
  <tr>
    <td height="31">&nbsp; </td>
    <td><%=image_submit_tag('https://www.paypal.com/en_US/i/btn/btn_xpressCheckout.gif')%></td>
  </tr>
  
   <%=hidden_field_tag :newlysavedreservationid, session[:newlysavedreservationid]%>  
  
  
  
  
  
</table>





</div>

</form>
