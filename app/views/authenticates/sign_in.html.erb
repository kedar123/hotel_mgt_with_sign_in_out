    </td>
  </tr>
  <tr>
    <td height="40" class="listening_eventstext">Password </td>
    <td> 
    <%=password_field_tag "userpassword",'',:size=>'30' %>
    </td>
  </tr>
  <tr>
  <td colspan="2">  
      <%=link_to "Forgot Password" ,authenticates_forgot_password_path,:class=>'listening_eventstext'%>
